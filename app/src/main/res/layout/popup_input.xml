<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_gravity="center"

        android:background="@drawable/popup_box">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Nama Aset"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:backgroundTint="@color/white"
            android:id="@+id/etAssetName"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Jumlah Aset"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"/>


        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:id="@+id/etAssetCount"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Harga Aset"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/etAssetPrice"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btAddAsset"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add " />


    </LinearLayout>

</androidx.cardview.widget.CardView>